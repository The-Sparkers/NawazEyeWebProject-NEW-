@using Microsoft.AspNet.Identity
@using NawazEyeWebProject_NEW_.Models
@{ 
}
@if (Request.IsAuthenticated)
{
    string userId = User.Identity.GetUserId();
    Account a = new Account(userId);
    if (a.Buyer.GetCurrentCart() != null)
    {
        <a href="@Url.Action("Index","Cart")"><span class="glyphicon glyphicon-shopping-cart"></span><font style="font-size:12px">(@a.Buyer.GetCurrentCart().GetItemsCount())</font></a>
    }
    else
    {
        <a href="@Url.Action("Index","Cart")"><span class="glyphicon glyphicon-shopping-cart"></span><font style="font-size:12px">(0)</font></a>
    }
}
else
{
    <a href="@Url.Action("Index","Cart")"><span class="glyphicon glyphicon-shopping-cart"></span></a>
}
