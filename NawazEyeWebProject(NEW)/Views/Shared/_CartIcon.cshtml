@using NawazEyeWebProject_NEW_.Models
@{ 
}
@if (Request.IsAuthenticated)
{
    string userId = User.Identity.GetUserId();
    Account a = new Account(userId);
        if (a.Buyer.GetCurrentCart() != null)
        {
        <a href="#"><span class="glyphicon glyphicon-shopping-cart"></span>(@a.Buyer.GetCurrentCart().GetItemsCount())</a>
        }
        else
        {
        <a href="#"><span class="glyphicon glyphicon-shopping-cart"></span>(0)</a>
            }
}
